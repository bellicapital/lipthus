doctype html

html
	head
		style.
			html,body{height:100%;margin:0;font-size:12px}
			table{border-collapse:collapse}
			td{vertical-align:top}
			table.main{width:100%;height:100%}
			table.list{font-size:.7em;text-align:center}
			table.list>tbody>tr:hover{cursor:pointer;background-color:#ccc}
			table.list th, table.list td{padding:2px 4px;border:1px solid}
			iframe{width:100%;min-width:600px;height:99%;border:none}
	body
		if emails
			table.main: tr: td
				table.list
					thead
						tr
							th Fecha
							th Para
							th Asunto
					tbody
						each e in emails
							tr(onclick="return ifl('"+e._id+"')")
								td= e.created.toUserDateString()+'-'+e.created.toLocaleTimeString()
								td= e.email.to
								td= e.email.subject
				td(style="height:100%")
							iframe#ifr

		script.
			var ifr = document.getElementById('ifr');

			function ifl(id){
				ifr.src="?id="+id;
			}